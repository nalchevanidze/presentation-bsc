\ProvidesPackage{stylings/block}

\newcommand\adjustboxBegin[1]
 {
    \vspace{\fill}
    \begin{adjustbox}{max width=0.98\textwidth, trim=0 2ex 0 0,clip}
    \begin{tabular}{!{\color{#1}{\vrule width 2pt}}>{\columncolor[gray]{0.97}}m{\textwidth}}
        \begin{beamercolorbox}{block title} 
        \usebeamerfont*{block title} 
        \vbox{}
        \vskip 0.2ex 
        \insertblocktitle 
        \end{beamercolorbox}
        \usebeamerfont*{block text}
 }

% WORKING ON BLOCKS
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{block begin}{\adjustboxBegin{PrimaryColor}}
\setbeamertemplate{block end}{\end{tabular}\end{adjustbox}}

\setbeamertemplate{block alerted begin}{\adjustboxBegin{DarkOrange}}
\setbeamertemplate{block alerted end}{\end{tabular}\end{adjustbox}}

\setbeamertemplate{block example begin}{\adjustboxBegin{DarkGreen}}
\setbeamertemplate{block example end}{\end{tabular}\end{adjustbox}}
