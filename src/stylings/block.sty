\ProvidesPackage{src/stylings/block}

\newcommand\openBlock[1]
 {
    \vspace{\fill}
    \textbf{\insertblocktitle}
    \vspace{4pt}
    \vbox{}
    \begin{adjustbox}{max width=0.98\textwidth, trim=0 2ex 0 0,clip}
    \begin{tabular}{!{
        \color{#1}{\vrule width 1pt}}>{
        \columncolor[gray]{1}
        }
        m{\textwidth}
    }
       %\begin{beamercolorbox}{block title} 

        % Title
     
        % Content
        % \end{beamercolorbox}
        \vspace{5pt}
        \hspace{2pt}
 }

\newcommand\closeBlock
 {
    \end{tabular}\end{adjustbox}
 }

% WORKING ON BLOCKS
\setbeamertemplate{navigation symbols}{}

\setbeamertemplate{block begin}{\openBlock{black!5!white}}
\setbeamertemplate{block end}{\closeBlock}

\setbeamertemplate{block alerted begin}{\openBlock{DarkOrange}}
\setbeamertemplate{block alerted end}{\closeBlock}

\setbeamertemplate{block example begin}{\openBlock{DarkGreen}}
\setbeamertemplate{block example end}{\closeBlock}
